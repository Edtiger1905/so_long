	@echo "⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⡏⠀⢐⠀⠀⠀⢠⣾⣦⣿⣿⡇⠀⠀⠀⠀⢇⡄⠀⠀⠀⠀⠀⠀⠀⢰⡿⠁⠀⠀⠀⢠⣷⢺⣿⣄⠀⠀⢐⣿⣧⠀⠘⢿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿"
	@echo "⣿⣿⣿⣿⣿⣿⣿⣿⣿⠇⠀⠀⢸⠛⠉⠉⠉⠉⠁⠉⠈⠁⠀⠈⠐⠠⠨⠼⡄⠀⠀⠀⠀⢀⣰⣿⠃⠄⠒⠒⠒⠶⠻⠿⠿⠛⠷⠄⠊⠿⡇⠀⠀⠈⢽⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿"

endef

# ---------- COLORS & MESSAGES ----------
ECHO_OK = @echo "\033[1;32m[OK]\033[0m"
ECHO_STEP = @echo "\033[1;34m==> $1\033[0m"

# ---------- RULES ----------
.PHONY: all clean fclean re

all: $(NAME)

# Il binario dipende solo dagli oggetti e dalle librerie
$(NAME): $(OBJS) $(LIBS)
	@echo "Linking $(NAME)..."
	@$(CC) $(CFLAGS) $(OBJS) $(LIBS) -o $(NAME) $(LDFLAGS)
	@echo "[OK]"
	@echo ""
	@$(call PRINT_ART)

# ---------- LIBRARIES ----------
$(LIBFT_LIB):
	@$(MAKE) -s -C $(LIBFT_DIR)

$(MLX_LIB):
	@$(MAKE) -s -C $(MLX_DIR)

$(GNL_LIB):
	@$(MAKE) -s -C $(GNL_DIR)

$(PRINTF_LIB):
	@$(MAKE) -s -C $(PRINTF_DIR)

# ---------- OBJECTS ----------
%.o: %.c
	@echo "Compiling $<..."
	@$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

# ---------- CLEAN ----------
clean:
	@$(RM) $(OBJS)
	@$(MAKE) -s -C $(LIBFT_DIR) clean
	@$(MAKE) -s -C $(GNL_DIR) clean
	@$(MAKE) -s -C $(MLX_DIR) clean
	@$(MAKE) -s -C $(PRINTF_DIR) clean

fclean: clean
	@$(RM) $(NAME)
	@$(MAKE) -s -C $(LIBFT_DIR) fclean
	@$(MAKE) -s -C $(GNL_DIR) fclean
	@$(MAKE) -s -C $(PRINTF_DIR) fclean

re: fclean all